					<h1>Ajouter un(e) person(ne)
					</h1>
					<div class="tsipika2"></div>

					<div class="col-md-6 offset-md-3">

						{{ form_start(form) }}
						<div class="formu">
							<div class='form-group'>
								<label for="users_create_lastname">Nom</label>
								{{form_widget(form.lastname,{'attr':{'class':'form-control'}})}}
							</div>
							<div class='form-group'>
								<label for="users_create_firstname">Pr√©nom</label>
