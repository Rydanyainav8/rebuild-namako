{% include "sidebar.html.twig" %}

{% block title %}Hello PanierController!
{% endblock %}

{% block body %}

	<div class="container">
		<div class="responsive-table cartborder">
			<table class="table striped">
				<thead>
					<tr>
						<th>Numéro</th>
						<th>Matricule Carnet</th>
						<th>Solde</th>
						<th>Quantité</th>
						<th>Total</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for item in items %}
						<tr>
							<td>{{item.ticket.numero}}</td>
							<td>{{item.ticket.carnet}}</td>
							<td>{{item.ticket.value}}</td>
							<td>{{item.quantity}}</td>
							<td>{{item.ticket.value * item.quantity}}</td>
						</tr>
					{% endfor %}
				</tbody>
				<tfoot>
					<tr>
						<td></td>
						<td></td>
						<td></td>
						<td>Total:</td>
						<td>{{ total }}</td>
					</tr>

					{# <button type="submit">Valider</button> #}
				</tfoot>
			</table>
			{{ form_start(form)}}
			<div class="ch" style="display: none">
				{{ form_widget(form.total) }}
				{# {{ form_row(form.matricule)}} #}
			</div>
			{# <button type="submit" class="btn-Edit">Valider</button>  #}
			{{ form_end(form)}}
		</div>
	</div>
{% endblock %}
